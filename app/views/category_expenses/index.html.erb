<% title "Category Expenses" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% for category_expense in @category_expenses %>
    <tr>
      <td><%= category_expense.name %></td>
      <td><%= category_expense.description %></td>
      <td><%= link_to "Show", category_expense %></td>
      <td><%= link_to "Edit", edit_category_expense_path(category_expense) %></td>
      <td><%= link_to "Destroy", category_expense, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Category Expense", new_category_expense_path %></p>
